{
    "name": "simpod/doctrine-utcdatetime",
    "description": "Doctrine UTC DateTime",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Simon Podlipsky",
            "email": "simon@podlipsky.net"
        }
    ],
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": "^7.2",
        "doctrine/dbal": "2.*"
    },
    "require-dev": {
        "doctrine/coding-standard": "^7.0",
        "phpstan/phpstan": "^0.11.16",
        "phpstan/phpstan-phpunit": "^0.11.2",
        "phpstan/phpstan-strict-rules": "^0.11.1",
        "phpunit/phpunit": "^8.4"
    },
    "autoload": {
        "psr-4": {
            "SimPod\\DoctrineUtcDateTime\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SimPod\\DoctrineUtcDateTime\\Tests\\": "tests/"
        }
    }
}
