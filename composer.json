{
    "name": "simpod/doctrine-utcdatetime",
    "description": "Doctrine UTC DateTime",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Simon Podlipsky",
            "email": "simon@podlipsky.net"
        }
    ],
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": "^8.0",
        "doctrine/dbal": "^2 || ^3"
    },
    "require-dev": {
        "doctrine/coding-standard": "^9.0",
        "phpstan/phpstan": "^0.12.53",
        "phpstan/phpstan-phpunit": "^0.12.16",
        "phpstan/phpstan-strict-rules": "^0.12.5",
        "phpunit/phpunit": "^9.5",
        "simpod/php-coveralls-mirror": "^3.0",
        "vimeo/psalm": "^4.1"
    },
    "autoload": {
        "psr-4": {
            "SimPod\\DoctrineUtcDateTime\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SimPod\\DoctrineUtcDateTime\\Tests\\": "tests/"
        }
    }
}
